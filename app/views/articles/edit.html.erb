<div class="container">
  <h1>Edit Task</h1>
   <%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <br>
  <%= f.label :completed %>
  <%= f.check_box :completed  %>
  <%= f.submit class: 'btn'%>
  
<% end %>
</div>