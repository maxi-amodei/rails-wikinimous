<div class="container">
  <h1><%= @task.title %></h1>

  <div class="task-wraper"> 
    <p><%= @task.details %></p>
  </div>
  <div class="completion">
  <%= form_for(@task) do |f| %>
          <%= f.check_box :completed  %>
        <%end %>
  </div>
  <% if @task.completed %>
    <p>This task is completed</p>
  <% else %>
   <p>This task is not completed yet</p>
  <% end %> 
  <%= link_to "Back to list", tasks_path %> <br>
   <%= link_to "Edit", edit_tasks_path %>
</div>